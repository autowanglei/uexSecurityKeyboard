<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent"
    android:padding="5dp" 
    android:clickable="false"
    android:orientation="vertical" 
    android:weightSum="4">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="3"
        android:orientation="horizontal" >

        <Button
            android:layout_marginLeft="1dp"
            android:id="@+id/plugin_randomkeyboard_key_board_num_one"
            style="@style/plugin_randomkeyboard_key_board_num_btn_bg"
            android:text="1"
            android:textSize="18sp"  />

        <Button
            android:id="@+id/plugin_randomkeyboard_key_board_num_two"
            style="@style/plugin_randomkeyboard_key_board_num_center_btn_bg"
            android:text="2" 
            android:textSize="18sp" />

        <Button
            android:id="@+id/plugin_randomkeyboard_key_board_num_three"
            style="@style/plugin_randomkeyboard_key_board_num_btn_bg"
            android:layout_marginRight="1dp"
            android:text="3" 
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/plugin_randomkeyboard_key_board_num_four"
            style="@style/plugin_randomkeyboard_key_board_num_btn_bg"
            android:layout_marginLeft="1dp"
            android:text="4" 
            android:textSize="18sp" >
        </Button>

        <Button
            android:id="@+id/plugin_randomkeyboard_key_board_num_five"
            style="@style/plugin_randomkeyboard_key_board_num_center_btn_bg"
            android:text="5" 
            android:textSize="18sp" >
        </Button>

        <Button
            android:id="@+id/plugin_randomkeyboard_key_board_num_six"
            style="@style/plugin_randomkeyboard_key_board_num_btn_bg"
            android:layout_marginRight="1dp"
            android:text="6" 
            android:textSize="18sp" >
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/plugin_randomkeyboard_key_board_num_seven"
            android:layout_marginLeft="1dp"
            style="@style/plugin_randomkeyboard_key_board_num_btn_bg"
            android:text="7" 
            android:textSize="18sp" >
        </Button>

        <Button
            android:id="@+id/plugin_randomkeyboard_key_board_num_eight"
            style="@style/plugin_randomkeyboard_key_board_num_center_btn_bg"
            android:text="8" 
            android:textSize="18sp" >
        </Button>

        <Button
            android:id="@+id/plugin_randomkeyboard_key_board_num_nine"
            style="@style/plugin_randomkeyboard_key_board_num_btn_bg"
            android:layout_marginRight="1dp"
            android:text="9" 
            android:textSize="18sp" >
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <!-- 输入法切换 -->

        <Button
            android:id="@+id/plugin_randomkeyboard_btn_num_done"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/plugin_randomkeyboard_key_dot_bg_select"
            android:text="@string/plugin_uexsecuritykeyboard_done"
            android:visibility="visible"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/plugin_randomkeyboard_key_board_num_zero"
            style="@style/plugin_randomkeyboard_key_board_num_center_btn_bg"
            android:text="0" />
        <!-- 回退 -->

        <Button
            android:id="@+id/plugin_randomkeyboard_btn_num_del"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/plugin_randomkeyboard_key_delete_greenbg_select"/>
    </LinearLayout>

</LinearLayout>